        datetime last_login
    }

    MARKET {
        int market_id PK
        string market_name
        string market_code UK
        string address
        string city
        string province
        string postal_code
        string contact_number
        string email
        text description
        enum status "active, inactive, under_maintenance"
        datetime operating_hours_start
        datetime operating_hours_end
        datetime created_at
        datetime updated_at
    }

    VENDOR {
        int vendor_id PK
        int user_id FK
        int market_id FK
        string business_name
        string business_registration_number UK
